{
  "manifest_version": 2,
  "name": "Citizen Science Project Helper Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "p5.js",
        "p5.dom.js",
        "sketch.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "downloads"
  ]
}